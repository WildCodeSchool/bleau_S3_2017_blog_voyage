        {{ form_start(form,{'attr': {'enctype': 'multipart/form-data'}}) }}

        <input type="submit" value="Chercher les articles correspondant"/>
        <p>
            {{ form_label(form.category, "Titre de l'article") }}
            {{ form_errors(form.category) }}
            {{ form_widget(form.category) }}
        </p>

        {{ form_end(form) }}

    </div>
