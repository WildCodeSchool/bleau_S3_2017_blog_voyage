
{% extends 'layout.html.twig' %}

{% block style %} {{ asset('bundles/css/admin.css') }} {% endblock %}
{% block title %}Administration{% endblock%}

{% block form %}
	<div class="menu menu-add">
		<a href="{{ path('admin_index') }}"><button class="btn btn-large btn-danger"> Accueil </button></a>
		<a href=""><button class="btn btn-large btn-danger"> Déconnexion </button></a>
	</div>
	
	{% for flashes in app.session.flashbag.all %}
		{% for flash in flashes %}
			<div id="alert-message">
				<p>
					{{ (flash) }}
				</p>	
			</div>	
		{% endfor %}
	{% endfor %}
	
<div class="form">
    {{ form_start(form,{'attr': {'enctype': 'multipart/form-data'}}) }}
    <p>
        {{ form_label(form.title, "Titre de l'article", {'label_attr' : {class:"label-titre" }} ) }}
        {{ form_errors(form.title) }}
        {{ form_widget(form.title) }}
	</p>
	
	{% if keyword !=null %} 
	<div id='categoryList'>
		<label for="content" class="label-category"> Catégories existantes </label>
		<select name='category[]' id='content' multiple="true">
				<option value="" selected> Choisir une catégorie </option>
			{% for key in keyword %}
				<option value='{{ key.category }}'/>{{ key.category }}</option>
			{% endfor %}
		</select>
	</div>
	{% endif %}

	<div class="content-block">
		<div style="background-color: white; margin: 25px 0px 50px;">
			<p style="padding-top: 5px; padding-bottom: 5px;">
				<label class="label-image">Image 1</label>
				<input type="file" name="src[]" class="inputFileNoUpload" required="undefined">
			</p>
			<p style="margin: 25px 0px;">
				<label for="first-text" class="label-text">Texte 1</label>
				<textarea name="content[]" id="first-text" required></textarea>
				<p style="display: flex; justify-content: space-around; margin: 0px auto; padding-bottom: 15px; padding-top: 15px;">
					<button class="btn btn-large btn-danger text-trash">Vider le texte</button>
				</p>
			</p>
		</div>
	</div>
	
	<div id='buttonRange'>
		<button class='content btn btn-large btn-success'>Nouveau contenu</button>
		<button class='category btn btn-large btn-success'>Nouvelle catégorie</button>
	</div>
	
	
	<label for="check" for="submit" id="label-submit"> Alerter mes abonnés </label>
	<input type="checkbox" name="checked" id="check" checked/>
	
    <label for="submit1" id="label-submit"> Publier l'article </label>
    <input type="submit" id="submit1" class="btn btn-large btn-danger" value="Valider la création"/>
	{{ form_end(form) }}

</div>
{% endblock %}

{% block javascript %}{{ asset('bundles/js/form.js') }}{% endblock %}