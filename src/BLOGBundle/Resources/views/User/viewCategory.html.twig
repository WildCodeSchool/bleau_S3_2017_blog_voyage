{% endblock %}


{% block container %}
    <div class="container container-category">
        {% block row %}
            <div class="row">
                {% for article in articles_categ %}
                    <div class="col-xs-12 col-sm-6 col-md-4 article-custom">
                        {% for image in article.image %}
                            {% if loop.first %}
                                <img src="{{ asset('bundles/images/'~image.src)}}" class="img-thu"/>
                            {% endif %}
                        {% endfor %}
                        <div class="article-caption">
                            <h3>{{ article.title }}</h3>
                            <p>
                                {% for content in article.content %}
                                    {{ content.content }}
                                {% endfor %}
                            </p>
                            <a href="{{ path('blog_article', {id : article.id}) }}"><button class="btn btn-lg btn-danger">En savoir plus</button></a>
                            <i>Publié le {{ article.date.date|date('d/m/Y h:m:s') }} </i>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endblock %}
    </div>
{% endblock %}