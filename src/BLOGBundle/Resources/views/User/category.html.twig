{% extends '@BLOG/layout.html.twig' %}

{% block title %} {{ parent() }} - Catégories {% endblock %}


{% block Category %}

    <div class="well form-cat">
        {{ form_start(form_cat) }}
        <p>
            {{ form_errors(form_cat.categories) }}
            {{ form_widget(form_cat, { 'attr': {'name': 'cat'} }) }}
            {#{{ form_row(form.categories) }}#}
        </p>
        {{ form_widget(form_cat.chercher, { 'label': 'Click me' }) }}
        {{ form_rest(form_cat) }}
        {{ form_end(form_cat) }}
    </div>
{% endblock %}

{% block container %}
    <div class="container container-categ">
        {% block row %}
            {%  for categories in categ %}
                <div class="row">
                    <div class="well display-category">
                    <h1>{{ categories.category }}</h1>
                    </div>

                    {% for articles in categories.article %}

                        <div class="col-xs-12 col-sm-6 col-md-4 article-custom">
                            {% for image in articles.image %}
                                {% if loop.first %}
                                    <img src="{{ asset('bundles/images/'~image.src)}}" class="img-thu"/>
                                {% endif %}
                            {% endfor %}
                            <div class="article-caption">
                                <h3>{{ articles.title }}</h3>
                                <p>
                                    {% for content in articles.content %}
                                        {{ content.content }}
                                    {% endfor %}
                                </p>
                                <a href="{{ path('blog_article', {id : articles.id}) }}"><button class="btn btn-lg btn-danger">En savoir plus</button></a>
                                <i>Publié le {{ articles.date.date|date('d/m/Y h:m:s') }} </i>
                            </div>
                        </div>

                    {% endfor %}
                </div>
            {% endfor %}
        {% endblock %}
    </div>
{% endblock %}

{%block javascript %}{{ asset('bundles/js/style.js') }} {% endblock %}