{% extends '@BLOG/layout.html.twig' %}

{% block title %}{% endblock %}

{% block container %}
	<div class="container container-presentation">
		<div class="row">
			<h1 class="presentation-section-title">A propos de nous</h1>
			<div class="col-xs-12">
				<img src="{{ asset('bundles/images/'~presentation|first.image) }}" />
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<p id="presentation">
					{{ presentation|first.presentation|nl2br }}
				</p>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<h1 class="presentation-section-title"> Remerciements </h1>
				<p id="contributors">
					{{ presentation|first.contributors|nl2br }}
				<p>
			</div>
		</div>
	</div>
{% endblock %}